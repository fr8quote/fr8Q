<%= simple_form_for(@status_time) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :status %>
    <%= f.input :location %>
    <%= f.input :notes %>
    <%= f.association :user %>
    <%= f.association :trip %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
